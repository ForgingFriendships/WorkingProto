    /
      Contact Section
      \==================================================
    #tf-contact.contact
      .container-fluid
        .section-header
        %h2 Sign up!
        .row-fluid
          .col-xs-6.col-centered.pull-left
            %t Already a user? 
            = link_to "Sign in now!", sign_in_path
            <br><br>
            = form_tag sign_up_path, :method => :post do
              = label :user, :name, 'Name'
              = text_field :user, :name, :class => "form-control", :placeholder => "Enter a User name"
              <br>

              = label :user, :email, 'Email'
              = text_field :user, :email, :class => "form-control", :placeholder => "Enter a Email"
              <br>

              = label :user, :password, 'Password'
              = password_field :user, :password, :class => "form-control", :placeholder => "Enter a Password"
              <br>

              = label :user, :password_confirmation, 'Password Confirmation'
              = password_field :user, :password_confirmation, :class => "form-control", :placeholder => "Confirm Password"
              <br>

              = submit_tag 'Sign up', :class => "btn btn-primary tf-btn color"
              <br><br>
          .col-xs-3.col-centered.pull-left
            %br
              %br
