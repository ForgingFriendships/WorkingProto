          <strong>Create New Event</strong
          <br>
          <br>
          <hr style="height:1px;border-width:0;color:gray;background-color:gray">

        = form_tag events_path do

          = label :event, :event_name, 'Event Name:'
          <br>
          = text_field :event, :event_name
          <br>
          = label :event, :description, 'Description:'
          <br>
          = text_field :event, :description
          <br>
          = label :event, :host, 'Host:'
          <br>
          = text_field :event, :host
          <br>
          = label :event, :start_date_time, 'Start Date Time:'
          <br>
          = datetime_select :event, :start_date_time
          <br>
          = label :event, :end_date_time, 'End Date Time:'
          <br>
          = datetime_select :event, :end_date_time
          <br>
          = label :event, :venue, 'Venue:'
          <br>
          = text_field :event, :venue
          <br>
          = label :event, :address, 'Address:'
          <br>
          = text_field :event, :address
          <br>
          = label :event, :max_capacity, 'Maximum Capacity:'
          <br>
          = text_field :event, :max_capacity
          <br><br>
          = submit_tag 'Save Changes'











