    #tf-events
      .container
        .section-header
          %h2
            Our Events build
            %span.highlight
              %strong Relationships
          %h5
            %em We host events for children to bond with each other.
          .fancy
            %span
              %img{:alt => "...", :src => "img/favicon.png"}/
      / End Container
      .container-fluid
        / fluid container
        #events.row
          - if @events.first
            .col-sm-4.col-md-6
              / event #1
              .thumbnail
                %img{:alt => "...", :src => "#{@events.first.event_picture_file_path}"}
                  / event #1 picture
                .caption
                  %h3=@events.first.event_name
                  %p
                    = @events.first.start_date_time.to_date.to_formatted_s(:long_ordinal).concat(". ")
                    = @events.first.description
                  %p
                    = button_to 'Attend!', {:controller => "users", :action => "register_for_event", :event_for_registration => @events.first.id}, :method => :post, :confirm => 'Are you sure you want to attend this event?', :class => "btn btn-primary"
          - if @events.second
            .col-sm-6.col-md-4
              / event #2
              .thumbnail
                %img{:alt => "...", :src => "#{@events.second.event_picture_file_path}"}
                  / event #2 picture
                .caption
                  %h3=@events.second.event_name
                  %p
                    = @events.second.start_date_time.to_date.to_formatted_s(:long_ordinal).concat(". ")
                    = @events.second.description
                  %p
                    = button_to 'Attend!', {:controller => "users", :action => "register_for_event", :event_for_registration => @events.second.id}, :method => :post, :confirm => 'Are you sure you want to attend this event?', :class => "btn btn-primary"
        / End Container-Fluid

    #tf-contact.contact
      .container
        / container
        .section-header
          %h2
            %p
            %p
            %p
            %p
            %p
            All Events

        %table#events.table
          %thead
            %tr
              -# Note there are invisible spaces after each of following th titles
              %th Event Name           
              %th Description          
              %th Start Time                    
              %th End Time                      
              %th Venue                
              %th Address                                 
          %tbody
            - @events.each do |event|
              %tr
                %td= event.event_name 
                %td= event.description
                %td= event.start_date_time.to_formatted_s(:long_ordinal)
                %td= event.end_date_time.to_formatted_s(:long_ordinal)
                %td= event.venue
                %td= event.address
                %td= button_to 'Attend!', {:controller => "users", :action => "register_for_event", :event_for_registration => event.id}, :method => :post, :confirm => 'Are you sure you want to attend this event?', :class => "btn btn-primary"
   
