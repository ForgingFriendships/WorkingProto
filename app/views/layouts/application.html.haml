!!!
%html
  %head
    %meta{:charset => "utf-8"}
      %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
        %link{:href => "~/Documents/forgingfriendships/bootstrap-3.3.2-dist/css/bootstrap.css", :rel => "stylesheet"}
          %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"}
          %script{:src => "~/Documents/forgingfriendships/bootstrap-3.3.2-dist/js/bootstrap.js"}
          %title Forging Friendships
          = stylesheet_link_tag    "application", :media => "all"
          = javascript_include_tag "application"
          = csrf_meta_tags
  %body    
    /
      Main Navigation
      \==================================================
    %nav#tf-menu.navbar.navbar-default.navbar-fixed-top
      - if @current_user
        %p.welcome  Welcome, #{@current_user.name}!
        = link_to 'Log Out', logout_path
      .container
        / Brand and toggle get grouped for better mobile display
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "/index"}
            %img{:alt => "FF logo-min", :src => "img/logo-min.png"}/
        / Collect the nav links, forms, and other content for toggling

        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          %ul.nav.navbar-nav.navbar-right
            %li
              %a{:href => "/program"} Program
            %li.dropdown
              %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" =>"dropdown", :role => "button"}
                Story
                %span.caret
                  %ul.dropdown-menu{:role => "menu"}
                    %li
                      %a{:href => "/inspiration"} Inspiration
                    %li
                      %a{:href => "/management_team"} Management Team
            %li.dropdown/
            
            %li
              %a{:href => "/donate"} Donate
              
            - if !(@current_user)
              %li.dropdown
                %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" =>"dropdown", :role => "button"}
                  Sign-Up/Login
                  %span.caret
                    %ul.dropdown-menu{:role => "menu"}
                      %li
                        %a{:href => "/auth/twitter"} Via Twitter
                      %li
                        %a{:href => "/auth/facebook"} Via Facebook
                      %li
                        %a{:href => "/auth/google_oauth2"} Via Google
            - else
              %li.dropdown
                %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" =>"dropdown", :role => "button"}
                  = (@current_user.name)
                  %span.caret
                    %ul.dropdown-menu{:role => "menu"}
                      - if (@current_user.admin)
                        %li
                          %a{:href => "/events"} All Events
                        %li
                          %a{:href => "/events/new"} Add Event
                      %li
                        %a{:href => "/logout"} Logout...
            %li
              %a{:href => "/contact"} Contact
        / /.navbar-collapse
      / /.container-fluid

    = yield

